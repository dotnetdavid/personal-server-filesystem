# Makefile — personal-server-filesystem

# Load machine-specific configuration
include env/env.mk

# Default target
.DEFAULT_GOAL := help

# ---------------------------------------------------------------------------
# Help
# ---------------------------------------------------------------------------
help:
	@echo ""
	@echo "personal-server-filesystem — Make Targets"
	@echo ""
	@echo "  make build      Build the Docker image"
	@echo "  make run        Run the container (foreground)"
	@echo "  make daemon     Run the container detached"
	@echo "  make stop       Stop running containers"
	@echo "  make logs       Tail container logs"
	@echo "  make status     Show container and image status"
	@echo "  make clean      Remove dangling Docker artifacts"
	@echo "  make nuke       Full teardown and rebuild"
	@echo "  make init       initialize the project"
	@echo "  make help       Show this help menu"
	@echo ""

# ---------------------------------------------------------------------------
# Build
# ---------------------------------------------------------------------------
build: init
	@./scripts/build.sh

# ---------------------------------------------------------------------------
# Run
# ---------------------------------------------------------------------------
run: init
	@./scripts/run.sh

# ---------------------------------------------------------------------------
# Stop
# ---------------------------------------------------------------------------
stop:
	@./scripts/stop.sh

# ---------------------------------------------------------------------------
# Logs
# ---------------------------------------------------------------------------
logs:
	@./scripts/logs.sh

# ---------------------------------------------------------------------------
# Status
# ---------------------------------------------------------------------------
status:
	@./scripts/status.sh

# ---------------------------------------------------------------------------
# Clean
# ---------------------------------------------------------------------------
clean:
	@./scripts/clean.sh

# ---------------------------------------------------------------------------
# Clean FORCE
# ---------------------------------------------------------------------------
clean-force:
	CONFIRM=1 ./scripts/clean.sh


# ---------------------------------------------------------------------------
# Nuke - Rebuild from scorched earth
# ---------------------------------------------------------------------------
nuke: init
	@./scripts/nuke.sh

# ---------------------------------------------------------------------------
# Nuke FORCE - Rebuild from scorched earth NO PROMPT
# ---------------------------------------------------------------------------
nuke-force: init
	CONFIRM=1 ./scripts/nuke.sh

# ---------------------------------------------------------------------------
# daemon
# ---------------------------------------------------------------------------
daemon: init
	@./scripts/daemon.sh

# ---------------------------------------------------------------------------
# init
# ---------------------------------------------------------------------------
.PHONY: init
init:
	@echo "Generating env/env.compose from env/env.sh..."
	@awk '/^export VAULT_ROOT=/{gsub("export ", "", $$0); print $$0}' env/env.sh > env/env.compose
	@chmod +x scripts/*
	@echo "env/env.compose updated."

# ---------------------------------------------------------------------------
# build-base: Builds the base image for testing
# ---------------------------------------------------------------------------

build-base:
	docker build --no-cache -t personal-server-filesystem:base -f Dockerfile .

# ---------------------------------------------------------------------------
# build-test: Wraps the base image for testing
# ---------------------------------------------------------------------------

build-test: build-base
	docker build --no-cache -t personal-server-filesystem:test -f Dockerfile.test .

	#Starts the container
	docker run -d \
		--network mcp-test-network \
		--name mcp-test \
		-v ${VAULT_ROOT}:/personal \
		personal-server-filesystem:test

# ---------------------------------------------------------------------------
# build-harness: Builds the Test Harness image
# ---------------------------------------------------------------------------

build-harness:
	docker build --no-cache -t personal-server-filesystem:test-harness -f Dockerfile.test-harness .

# ---------------------------------------------------------------------------
# test-network:  Creates a network for the test harness
# ---------------------------------------------------------------------------
test-network:
	@docker network inspect mcp-test-network >/dev/null 2>&1 || \
		docker network create mcp-test-network
	@echo "mcp-test-network ready"


# ---------------------------------------------------------------------------
# test-infra: Run infra tests inside the test-harness container
# ---------------------------------------------------------------------------

test-infra:
	@docker run --rm \
		--network mcp-test-network \
		--name mcp-personal-server-filesystem-test-harness \
		--entrypoint "" \
		personal-server-filesystem:test-harness \
		/app/run-infra-tests.sh

# ---------------------------------------------------------------------------
# test-logs: Test logs externally (host-side)
# ---------------------------------------------------------------------------

test-logs:
	./scripts/test-mcp-logs.sh


# ---------------------------------------------------------------------------
# test-standup: Runs all the Make targets to standup the testing scaffolding
# ---------------------------------------------------------------------------
.PHONY: test-standup
test-standup:
	$(MAKE) test-network
	$(MAKE) build-base
	$(MAKE) build-test
	$(MAKE) build-harness


# ---------------------------------------------------------------------------
# test-teardown: Removes the testing scaffolding
# ---------------------------------------------------------------------------
.PHONY: test-clean
test-clean:
	@echo "Cleaning exited containers..."
	@docker rm $$(docker ps -aq -f status=exited) 2>/dev/null || true

	@echo "Pruning dangling images..."
	@docker image prune -f >/dev/null

	@echo "Pruning unused networks..."
	@docker network prune -f >/dev/null

	@echo "Docker test environment cleaned."


# ---------------------------------------------------------------------------
# test-teardown: Removes the testing scaffolding
# ---------------------------------------------------------------------------
.PHONY: test-teardown
test-teardown:
	@echo "Stopping and removing test harness container..."
	-@docker rm -f mcp-personal-server-filesystem-test-harness 2>/dev/null || true

	@echo "Stopping and removing test containers..."
	-@docker ps -a --format '{{.Names}}' | grep '^mcp-test' | xargs -r docker rm -f

	@echo "Removing test network..."
	-@docker network rm mcp-test-network 2>/dev/null || true

	@echo "Pruning dangling images..."
	-@docker image prune -f >/dev/null

	@echo "Test environment torn down."

# ---------------------------------------------------------------------------
# test-reset: performs a teardown and then a fresh standup
# ---------------------------------------------------------------------------
.PHONY: test-reset
test-reset: test-teardown test-standup
	@echo "Test environment reset and ready."